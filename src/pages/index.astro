---
import Layout from "../layouts/Layout.astro";
import CardStack from "../components/card-stack.astro";
import Progress from "../components/progress.astro";

const tutoriasMorning = 6;
const tutoriasNight = 2;
---

<Layout>
  <main class="pt-14 pb-20 md:pb-30 min-h-screen bg-neutral-50">

    <h1 class="text-4xl mb-20 text-center px-10">Minha lindona!</h1>

    <div class="flex flex-col text-center text-lg text-neutral-700">
      <div>Faltam apenas</div>

      <CardStack number={tutoriasMorning} />

      <div>tutorias para o internato!</div>
    </div>

    <div class="my-16 flex justify-center">
      <div class="w-3/4 border-t border-neutral-200"></div>
    </div>

    <div class="flex flex-col text-center text-lg text-neutral-700">
      <div>E apenas</div>

      <CardStack number={tutoriasNight} />

      <div>tutorias da noite para o internato!</div>
    </div>

    <div class="my-16 flex justify-center">
      <div class="w-3/4 border-t border-neutral-200"></div>
    </div>

    <div class="flex flex-col text-center text-lg text-neutral-700">
      <div>🎉 Parabéns! Você já é esse tanto médica:</div>

      <div class="mt-3 font-bold text-2xl">
        <Progress client:load />
      </div>
    </div>
  </main>
</Layout>
